@model IEnumerable<RowerPower.Models.VehicleReservationModel>

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Zarządzanie rezerwacjami</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID rezerwacji</th>
                            <th>Nr lokalu</th>
                            <th>Początek rezerwacji</th>
                            <th>Data upłynięcia rezerwacji</th>
                            <th>Dodatkowe</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID rezerwacji</th>
                            <th>Nr lokalu</th>
                            <th>Początek rezerwacji</th>
                            <th>Data upłynięcia rezerwacji</th>
                            <th>Dodatkowe</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.ReservationId)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.LocaleId)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.ReservationDateStart)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.ReservationDateFinish)
                                </td>
                                <td style="text-align:center">
                                    <!--<a href="/Admin/UserEdit/@item.ReservationId">Edycja</a>-->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>