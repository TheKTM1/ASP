@model IEnumerable<RowerPower.Models.VehicleRentalSpotViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Punkty wypożyczeń</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocaleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocaleAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocaleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocaleAddress)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.LocaleId">Szczegóły</a> |
                <a asp-action="Edit" asp-route-id="@item.LocaleId">Edycja</a> |
                <a asp-action="Delete" asp-route-id="@item.LocaleId">Skasuj</a>
            </td>
        </tr>
}
    </tbody>
</table>
